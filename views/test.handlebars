{{#each ads}}
    {{!-- Show sample card on hovering over entry --}}
    <div class="row">
        <div class="col-sm-4">
        <div class="card m-3" style="width: 19rem;">
            <div class="card-header text-white bg-primary">
                <h4 id="businessName">{{this.dataValues.Business.dataValues.bussName}}</h4>
                <h5>{{this.dataValues.Business.dataValues.bussCategory}}</h5>
            </div>
            <div class="card-body bg-light text-dark">
                <img src="https://via.placeholder.com/150" alt="Placeholder"
                    sizes="(min-width: 256px) 114px, 350px" srcset="" width="262" height="204">
                <ul class="list-group">
                    <li class="list-group-item" style="font-size: 15px;">{{this.dataValues.Business.dataValues.bussEmail}}</li>
                    <li class="list-group-item" style="font-size: 15px;">
                        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="{{this.dataValues.prodImg}}" class="d-block w-100" alt="...">
                                    <ul class="list-group">
                                        <li class="list-group-item" style="font-size: 15px;">{{this.dataValues.prodName}}</li>
                                        <li class="list-group-item" style="font-size: 15px;">{{this.dataValues.description}}</li>
                                        <li class="list-group-item" style="font-size: 15px;">{{this.dataValues.originalPrice}}</li>
                                        <li class="list-group-item" style="font-size: 15px;">{{this.dataValues.discountedPrice}}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{{/each}}
